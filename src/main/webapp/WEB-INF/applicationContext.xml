<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:tx="http://www.springframework.org/schema/tx"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.3.xsd
		http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx-4.3.xsd">


<!-- ativaton  de l'annotation des transaction -->
<!-- 
    > annotation-driven = tx piloté par les annotations via un gestionnaire des tx
    proposé par spring (transaction-Manager)
 -->
<tx:annotation-driven transaction-manager="transactionManagerBean"/>


	<context:property-placeholder
		location="classpath:db.properties" />



	<bean id="dataSourceBean"
		class="org.springframework.jdbc.datasource.DriverManagerDataSource">
		<property name="driverClassName"
			value="${db.driverClassName}" />
		<property name="url" value="${db.url}" />
		<property name="password" value="${db.password}" />
		<property name="username" value="${db.user}" />

	</bean>

	<!-- déclaration du bean de la sessionFactory -->
	<!-- > spring propose une implementation de la session factory d'hibernate 
		nommé localSessionFactoryBean -->
	<bean id="sessionFactoryBean"
		class="org.springframework.orm.hibernate5.LocalSessionFactoryBean">

		<!-- injection du bean de la dataSource -->
		<property name="dataSource" ref="dataSourceBean" />

		<!-- 2 definition des prop d'hibernate -->
		<property name="hibernateProperties">
			<props>
				<prop key="hibernate.dialect">${db.hibernate.dialect}</prop>
				<prop key="hibernate.show_sql">${db.hibernate.showsql}</prop>
				<prop key="hibernate.hbm2ddl.auto">${db.hibernate.hbm2ddl.auto}</prop>

			</props>
		</property>

		<!-- declaration des classes entités annotés avec @etnity -->
		<property name="annotatedClasses">
			<list>
				<value>com.intiformation.AppSchool.modele</value>
			</list>

		</property>

	</bean>

<!-- declaration du bean du gestionnaire des tx -->
	<!-- gere pour nous les transactions -->
	<bean id="transactionManagerBean" class="org.springframework.orm.hibernate5.HibernateTransactionManager">
	
	<!-- injection du bean de la session factory "sessionFactoryBean" dans le gestionnaire des tx -->
	<property name="sessionFactory" ref="sessionFactoryBean"/>
	</bean>
	
	<!-- activation de la detection des annotations. ex @Autowired -->
<context:annotation-config/>

<!-- activation de la detection des bean de spring. ex : @Transactionnal/repository/@controller/@service -->
<context:component-scan base-package="com.intiformation.AppSchool"/>
	
</beans>
