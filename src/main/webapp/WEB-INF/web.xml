<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" version="3.1">
 
 <display-name>App_Super_School</display-name>

	<!-- emplacement des fichiers de def des bean spring -->
	<!-- dÃ©claration du listener -->
	<listener>
		<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
	</listener>


<!-- emplacement des fichiers -->
	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>
		/WEB-INF/applicationContext.xml 
		/WEB-INF/gestionEtudiant-servlet.xml
		</param-value>
	</context-param>



	<!-- declration de la servlet de spring mvc -->
	<servlet>
		<servlet-name>gestionEtudiant</servlet-name>
		<servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>

		<load-on-startup>1</load-on-startup>
	</servlet>

	<servlet-mapping>
		<servlet-name>gestionEtudiant</servlet-name>
		<url-pattern>/</url-pattern>
	</servlet-mapping>
 
  
  <welcome-file-list>
 
    <welcome-file>index.jsp</welcome-file>
 
  </welcome-file-list>
</web-app>